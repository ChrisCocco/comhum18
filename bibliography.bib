  title =    {A transformation technique from RGB signals to the Munsell system for color analysis of tobacco leaves},
  journal =  {Computers and Electronics in Agriculture},
  year =     {1998},
  volume =   {19},
  number =   {2},
  pages =    {155 - 166},
  abstract = {If color can be measured automatically and expressed in a way similar to human color sensation, it would be very useful in many fields where color is currently visually judged. Color is used as a factor in assessing the quality of many agriculture and food products. A system that can simulate human vision in color recognition and output useable quantitative results is therefore desirable. In this study a color analysis method was developed to simulate human color vision by using the Munsell color system. The RGB signal of a color image was transformed to the Munsell color system numerically via the CIE1931 and the CIE1976L*a*b* color systems. Flue-cured tobacco leaf was used to test the method. Results showed that the developed method could simulate human color vision.},
  issn =     {0168-1699},
  keywords = {Color, Munsell, CIE1931, CIE1976, Tobacco, Imaging}
}

@Article{ZhangZhangYaoEtAl2016,
  author =    {Liang Zhang and Liqiang Zhang and Xiaojing Yao and P. Takis Mathiopoulos and Chunming Han},
